<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:title="SecondActivity"
    tools:context="edu.illinois.cs465.myquizapp.SecondActivity">

    <!--Add a TextView here with the following attributes
        set id to reveal_answer
        set both layout_width and layout_height to wrap_content
        set default text to "show the answer here"
    -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id= "@+id/reveal_answer"
        android:textSize="32sp"
        android:text="Show the answer here"/>

</LinearLayout>



